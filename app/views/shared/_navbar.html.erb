<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-3 sticky-top">
  <div class="container-fluid">
    <%= link_to "/profiles", class: "navbar-brand" do %>
      <%= image_tag 'devify_logo.png' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "nav-link" %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "Signup", "/users/sign_up", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", "/users/sign_in", class: "nav-link" %>
          </li>
         <% end %>
      </ul>
    </div>
  </div>
</div>
